<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Theme -->
    <style name="Theme.Forschungsprojekt.Splash" parent="Theme.QuizApp.Splash.Dark"/>
    <!-- Base theme -->
    <style name="Theme.Forschungsprojekt" parent="Theme.Forschungsprojekt.Dark"/>
    <!-- Base BottomSheetDialogTheme -->
    <style name="Theme.Forschungsprojekt.BottomSheetDialog" parent="Theme.Forschungsprojekt.BottomSheetDialog.Dark"/>
    <!-- Base DialogFragmentTheme -->
    <style name="Theme.Forschungsprojekt.DialogFragment" parent="Theme.Forschungsprojekt.DialogFragment.Dark"/>
    <!-- Base DialogFragmentLoadingTheme -->
    <style name="Theme.Forschungsprojekt.DialogFragment.Loading" parent="Theme.Forschungsprojekt.DialogFragment.Loading.Dark"/>


    <!-- Light Splash Theme -->
    <style name="Theme.QuizApp.Splash.Dark" parent="Theme.Forschungsprojekt.Splash.Light">
        <item name="windowSplashScreenBackground">@color/ndw_blue</item>
    </style>


    <!-- Dark Base theme -->
    <style name="Theme.Forschungsprojekt.Dark" parent="Theme.Forschungsprojekt.Light">
        <!-- Colors -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>

        <item name="colorOnPrimary">@color/darkColorOnPrimary</item>

        <item name="colorSecondary">@color/darkColorSecondary</item>
        <item name="colorSecondaryVariant">@color/darkColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/darkColorOnSecondary</item>

        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <item name="colorOnBackground">@color/darkBackgroundColor</item>

        <!--        <item name="colorOnSurface">@color/white</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlActivated">@color/darkColorControlActivated</item>
        <item name="colorControlNormal">@color/darkColorControlNormal</item>
    </style>


    <!-- Dark BottomSheetDialogTheme -->
    <style name= "Theme.Forschungsprojekt.BottomSheetDialog.Dark"  parent="@style/Theme.Forschungsprojekt.BottomSheetDialog.Light">
        <!-- Colors -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/darkColorOnPrimary</item>

        <item name="colorSecondary">@color/darkColorSecondary</item>
        <item name="colorSecondaryVariant">@color/darkColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/darkColorOnSecondary</item>

        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <!--        <item name="colorOnSurface">@color/white</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlActivated">@color/darkColorControlActivated</item>
        <item name="colorControlNormal">@color/darkColorControlNormal</item>
    </style>


    <!-- Dark DialogFragmentTheme -->
    <style name="Theme.Forschungsprojekt.DialogFragment.Dark" parent="Theme.Forschungsprojekt.DialogFragment.Light">
        <!-- Colors -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/darkColorOnPrimary</item>

        <item name="colorSecondary">@color/darkColorSecondary</item>
        <item name="colorSecondaryVariant">@color/darkColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/darkColorOnSecondary</item>

        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <!--        <item name="colorOnSurface">@color/white</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlActivated">@color/darkColorControlActivated</item>
        <item name="colorControlNormal">@color/darkColorControlNormal</item>

    </style>


    <!-- Light DialogFragmentLoadingTheme. -->
    <style name="Theme.Forschungsprojekt.DialogFragment.Loading.Dark" parent="Theme.Forschungsprojekt.DialogFragment.Dark">
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowMinWidthMajor">85%</item>
    </style>
</resources>